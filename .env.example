# Configuration file path
CONFIG_PATH=./data/config.json

# Server settings
PORT=3000
HOST=localhost

# OpenWeather API Key (Required for weather widget)
# Get your API key at: https://openweathermap.org/api
PUBLIC_OPENWEATHER_API_KEY=your_api_key_here

# Simple login password (used by /api/login)
# Change this in your real .env; default is 'changeme'
LOGIN_PASSWORD=changeme
